
@{
    ViewBag.Title = "RecupereazaParola";
}

<h2>RecupereazaParola</h2>


<div id="loginDiv">
    @using (Html.BeginForm("RecupereazaParola", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
        <input type="text" id="recoverUserEmail" name="recoverUserEmail" placeholder="Email" class="form-control" />
        <br />
        <input type="submit" id="btnUserRecover" name="btnUserRecover" value="Send" class="btn btn-lg btn-block btn-primary" />
    }
</div>


