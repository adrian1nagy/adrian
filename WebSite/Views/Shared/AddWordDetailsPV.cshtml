                    @Html.DropDownList("addWordDetailsProper", listProperItems)
                </div>
            </div>
        </div>

        @* Word2 = Verb *@
        <div id="word2" class="group">
            @* Time *@
            <div class="form-group">
                @Html.LabelForModel("Timp", htmlAttributes: new { @class = "control-label col-md-2" })
