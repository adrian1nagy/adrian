        <div id="word4" class="group">qwerty</div>


    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('.group').hide();

        $("#addWordDetailsType").change(function () {
            $('.group').hide();
            $('#word' + $(this).val()).show();
        });
    });
</script>