@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelForModel("Tipul cuvântului", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("addWordDetailsType", listTypeItems)
            </div>
        </div>

        @* Word1 = Substantiv *@
        <div id="word1" class="group">
            @* Plural *@
            <div class="form-group">
                @Html.LabelForModel("Plural", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("addWordDetailsMultiplicity", listMultiplicityItems)
                </div>
            </div>

            @* Sex *@
            <div class="form-group">
                @Html.LabelForModel("Sex", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("addWordDetailsGender", listGenderItems)
                </div>
            </div>

            @* Caz*@
            <div class="form-group">
                @Html.LabelForModel("Caz", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("addWordDetailsCase", listCaseItems)
                </div>
            </div>

            @* Propriu*@
            <div class="form-group">
                @Html.LabelForModel("Propriu", htmlAttributes: new { @class = "control-label col-md-2" })
